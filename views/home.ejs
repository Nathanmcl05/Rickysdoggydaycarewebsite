  <style>
    :root {
      --blue: #1e88e5;
      --yellow: #fdd835;
      --white: #ffffff;
      --light-blue: #e3f2fd;
      --dark-blue: #1565c0;
      --gray: #f5f5f5;
      --text-dark: #333;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, Helvetica, sans-serif;
    }

    body {
      background-color: var(--light-blue);
      color: var(--text-dark);
      line-height: 1.6;
    }

    header {
      background: linear-gradient(90deg, var(--blue), var(--yellow));
      color: var(--white);
      text-align: center;
      padding: 40px 20px;
    }

    header i {
      font-size: 3rem;
      margin-bottom: 10px;
    }

    nav {
      background-color: var(--blue);
      display: flex;
      justify-content: center;
      gap: 30px;
      padding: 15px;
    }

    nav a {
      color: var(--white);
      text-decoration: none;
      font-weight: bold;
    }

    nav a i {
      margin-right: 8px;
    }

    main {
      max-width: 1100px;
      margin: auto;
      padding: 40px 20px;
    }

    section {
      background-color: var(--white);
      padding: 30px;
      border-radius: 12px;
      margin-bottom: 30px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    section h2 i {
      color: var(--yellow);
      margin-right: 10px;
    }

    .services {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .service-card {
      background-color: var(--gray);
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      transition: transform 0.3s;
    }

    .service-card i {
      font-size: 2.5rem;
      color: var(--blue);
      margin-bottom: 10px;
    }

    .service-card:hover {
      transform: translateY(-5px);
      background-color: var(--yellow);
    }

    .cta {
      background-color: var(--yellow);
      text-align: center;
    }

    .cta button {
      margin-top: 15px;
      padding: 12px 30px;
      font-size: 1rem;
      background-color: var(--blue);
      color: var(--white);
      border: none;
      border-radius: 25px;
      cursor: pointer;
    }

    footer {
      background-color: var(--blue);
      color: var(--white);
      text-align: center;
      padding: 20px;
    }

    footer i {
      color: var(--yellow);
    }
    
#chat-toggle {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: var(--blue);
  color: white;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
  cursor: pointer;
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
  z-index: 99999;
}

#chatbot-container {
  position: fixed;
  bottom: 90px;
  right: 20px;
  width: 350px;
  height: 500px;
  background-color: white;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 10px 25px rgba(0,0,0,0.25);
  display: none;
  z-index: 99999;
}

#chatbot-header {
  background-color: var(--blue);
  color: white;
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}

#chatbot-header button {
  background: none;
  border: none;
  color: white;
  font-size: 1.5rem;
  cursor: pointer;
}

#chatbot-container iframe {
  width: 100%;
  height: calc(100% - 45px);
  border: none;
}

/* ===== MOBILE OVERRIDES ONLY ===== */

@media (max-width: 600px) {
  #chatbot-container {
    width: 90%;
    height: 70%;
    right: 5%;
  }
}


