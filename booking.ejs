<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book a Visit | Rick's Doggy Daycare</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    :root {
      --blue: #1e88e5;
      --yellow: #fdd835;
      --white: #ffffff;
      --light-blue: #e3f2fd;
      --dark-blue: #1565c0;
      --gray: #f5f5f5;
      --text-dark: #333;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, Helvetica, sans-serif;
    }

    body {
      background-color: var(--light-blue);
      color: var(--text-dark);
    }

    header {
      background: linear-gradient(90deg, var(--blue), var(--yellow));
      color: var(--white);
      text-align: center;
      padding: 40px 20px;
    }

    nav {
      background-color: var(--blue);
      display: flex;
      justify-content: center;
      gap: 30px;
      padding: 15px;
    }

    nav a {
      color: var(--white);
      text-decoration: none;
      font-weight: bold;
    }

    main {
      max-width: 900px;
      margin: auto;
      padding: 40px 20px;
    }

    section {
      background-color: var(--white);
      padding: 30px;
      border-radius: 12px;
      margin-bottom: 30px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    h2 i {
      color: var(--yellow);
      margin-right: 10px;
    }

    form {
      display: grid;
      gap: 15px;
    }

    label {
      font-weight: bold;
    }

    input, select {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 1rem;
    }

    button {
      padding: 14px;
      background-color: var(--blue);
      color: var(--white);
      border: none;
      border-radius: 25px;
      font-size: 1rem;
      cursor: pointer;
    }

    button:hover {
      background-color: var(--dark-blue);
    }

    .bookings {
      background-color: var(--gray);
      padding: 20px;
      border-radius: 10px;
    }

    .booking-item {
      padding: 10px;
      margin-bottom: 10px;
      background-color: var(--white);
      border-left: 5px solid var(--yellow);
    }

    footer {
      background-color: var(--blue);
      color: var(--white);
      text-align: center;
      padding: 20px;
    }
  </style>
</head>

<body>

<header>
  <i class="fa-solid fa-calendar-check fa-2x"></i>
  <h1>Book a Visit</h1>
  <p>Reserve your dog‚Äôs spot üêæ</p>
</header>

<nav>
  <a href="index.html"><i class="fa-solid fa-house"></i>Home</a>
  <a href="#"><i class="fa-solid fa-calendar"></i>Booking</a>
</nav>

<main>

  <section>
    <h2><i class="fa-solid fa-dog"></i>Booking Form</h2>

    <form id="bookingForm">
      <div>
        <label>Owner Name</label>
        <input type="text" id="owner" required>
      </div>

      <div>
        <label>Dog Name</label>
        <input type="text" id="dog" required>
      </div>

      <div>
        <label>Service</label>
        <select id="service" required>
          <option value="">Select a service</option>
          <option>Daycare</option>
          <option>Overnight Boarding</option>
          <option>Grooming</option>
        </select>
      </div>

      <div>
        <label>Date</label>
        <input type="date" id="date" required>
      </div>

      <div>
        <label>Time</label>
        <input type="time" id="time" required>
      </div>

      <button type="submit">
        <i class="fa-solid fa-paw"></i> Confirm Booking
      </button>
    </form>
  </section>

  <section class="bookings">
    <h2><i class="fa-solid fa-list"></i>Upcoming Bookings</h2>
    <div id="bookingList"></div>
  </section>

<script>
  const form = document.getElementById("bookingForm");
  const bookingList = document.getElementById("bookingList");
  const dateInput = document.getElementById("date");

 const today = new Date();
 today.setHours(0, 0, 0, 0);
 today.setDate(today.getDate() + 1);

  const yyyy = today.getFullYear();
  const mm = String(today.getMonth() + 1).padStart(2, "0");
  const dd = String(today.getDate()).padStart(2, "0");

  dateInput.min = `${yyyy}-${mm}-${dd}`;
  dateInput.addEventListener("input", () => {
  dateInput.setCustomValidity("");
});

  form.addEventListener("submit", function(e) {
    e.preventDefault();

    const owner = document.getElementById("owner").value;
    const dog = document.getElementById("dog").value;
    const service = document.getElementById("service").value;
    const date = document.getElementById("date").value;
    const time = document.getElementById("time").value;

    const selectedDate = new Date(date);
    if (selectedDate < today) {
  dateInput.setCustomValidity(
    "Please choose a valid booking date. Bookings must be made at least one day in advance."
  );
  dateInput.reportValidity();
  return;
}


    const booking = document.createElement("div");
    booking.classList.add("booking-item");
    booking.innerHTML = `
      <strong>${dog}</strong> (${service})<br>
      Owner: ${owner}<br>
      ${date} at ${time}
    `;

    bookingList.appendChild(booking);
    form.reset();
  });
</script>


</body>
</html>
